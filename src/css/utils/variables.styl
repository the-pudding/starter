// -------------------
// Breakpoints
// -------------------
$mq_vars = {
    bp-2: '(min-width: 20em)' // 320px
    bp-3: '(min-width: 30em)' // 480px
    bp-4: '(min-width: 40em)' // 640px
    bp-5: '(min-width: 50em)' // 800px
		bp-6: '(min-width: 60em)' // 960px
}

// -------------------
// Typefaces
// -------------------
$national = 'National 2 Web'
$national-narrow = 'National 2 Narrow Web'
$tiempos = 'Tiempos Text Web'
$tiempos-hed = 'Tiempos Headline Web'
$atlas = 'Atlas Grotesk Web'
$publico = 'Publico Text Web'

$sans-fb = Helvetica, Arial, sans-serif
$serif-fb = Georgia, Times, serif
$sans = $national, $sans-fb
$sans-display = $national-narrow, $sans-fb
$serif = $tiempos, $serif-fb
$serif-display = $tiempos-hed, $serif-fb
$mono = Menlo, Consolas, Monaco, 'Courier New', monospace

// z-index
$z-index = {
    bottom: -100
    middle: 0
    top: 100
    overlay: 1000
}

// Color
$black = #000
$off-black = #282828
$gray-dark = #5b5b5b
$gray = #949494
$gray-light = #c9c9c9
$off-white = #f4f4f4
$white = #fff

$bg = #fff
$fg = $off-black
$primary= $off-black

$column-width = 40rem

$type-size = {
    xxx-small: {
        size: 10px,
        line-height: 1.65,
    }
    xx-small: {
        size: 11px,
        line-height: 1.65,
    }
    x-small: {
        size: 12px,
        line-height: 1.65
    }
    small: {
        size: 14px,
        line-height: 1.65   
    }
    root: {
        size: 16px,
        line-height: 1.65
    }
    medium: {
        size: 18px,
        line-height: 1.65
    }
    large: {
        size: 20px,
        line-height: 1.5
    }
    x-large: {
        size: 24px,
        line-height: 1.4
    }
    xx-large: {
        size: 32px,
        line-height: 1.4
    }
    xxx-large: {
        size: 40px,
        line-height: 1.4
    }
    xxxx-large: {
        size: 48px,
        line-height: 1.2
    }
		xxxxx-large: {
        size: 64px,
        line-height: 1.2
    }
}
