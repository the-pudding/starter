// -------------------
// Breakpoints
// -------------------
$mq_vars = {
    bp-1: '(min-width: 25em)'
    bp-2: '(min-width: 40em)'
    bp-3: '(min-width: 50em)'
    bp-4: '(min-width: 60em)'
}

// -------------------
// Typefaces
// -------------------
$sans = Helvetica, Arial, sans-serif
$sans-cond = Impact, Arial Narrow, Helvetica, sans-serif
$serif = Georgia, Times, serif

$whitney = 'Whitney SSm A', 'Whitney SSm B'
$whitney-hash ='whitney'
$mercury = 'Mercury SSm A', 'Mercury SSm B'
$mercury-hash ='mercury'

$whitney-subset = 'Whitney SSm subset A', 'Whitney SSm subset B', $sans
$mercury-subset = 'Mercury SSm subset A', 'Mercury SSm subset B', $serif

// z-index
$z-index = {
    bottom: -100
    middle: 0
    top: 100
    overlay: 3000
}

// Color
$off-black = #2a2a2a
$gray-dark = #666
$gray = #999
$gray-light = #ccc
$off-white = #efefef
